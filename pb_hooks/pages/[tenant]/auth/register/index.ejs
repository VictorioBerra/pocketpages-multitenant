<script server>
  let error = null
  if (request.method === 'POST') {
    const {
      identity,
      tenant,
      password
    } = body()
    try {
      pb().collection('users').create({
        identity,
        tenant,
        password
      })
      redirect(`/`)
    } catch (e) {
      error = `Error registering user: ${e.message}`
    }
  }
</script>
<h2>Register for user in tenant <%= stringify(data) %></h2>
<% if (error) { %>
<div><mark><%= error %></mark></div>
<% } %>
<form method="post">
  <label>Username</label>
  <input name="identity" value="<%= data.identity %>" />
  <label>Password</label>
  <input name="password" type="password" value="<%= data.password %>" />
  <button type="submit">Login</button>
</form>